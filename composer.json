{
    "name":        "arcanesoft/core",
    "description": "The core package foreach ARCANESOFT's module",
    "keywords":    ["arcanedev", "arcanesoft", "laravel", "core", "support"],
    "homepage":    "https://github.com/ARCANESOFT/Core",
    "authors": [
        {
            "name":     "ARCANEDEV",
            "email":    "arcanedev.maroc@gmail.com",
            "homepage": "https://github.com/arcanedev-maroc"
        }
    ],
    "type":    "library",
    "license": "MIT",
    "require": {
        "php":                          ">=7.0",
        "arcanedev/breadcrumbs":        "~3.1",
        "arcanedev/hasher":             "~2.2",
        "arcanedev/laravel-active":     "~1.1",
        "arcanedev/laravel-api-helper": "~2.2",
        "arcanedev/laravel-html":       "~5.5",
        "arcanedev/laravel-settings":   "~2.0",
        "arcanedev/notify":             "~3.4",
        "arcanedev/seo-helper":         "~1.4",
        "arcanedev/support":            "~4.0",
        "arcanesoft/contracts":         "~2.0",
        "arcanesoft/sidebar":           "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "phpunit/phpcov":  "~4.0"
    },
    "autoload": {
        "psr-4": {
            "Arcanesoft\\Core\\": "src/"
        },
        "files": ["helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Arcanesoft\\Core\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "testbench": "composer require --dev \"orchestra/testbench=~3.5\""
    }
}
